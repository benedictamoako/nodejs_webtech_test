    <div id="contactHeadDiv">
        <h2><b>Get in touch!</b></h2>
        <p>Send us your enquiries and we will get back to you within 24 hours</p>
    </div>

    <!-- contact form divider -->
    <div class="container" id="contactFormContainer">
        <div class="row">
            <div class="col" id="contactDivCol1">
                <img src="https://clarioninvestgh.com/wp-content/uploads/2019/02/contact-3.jpg" id="colImage" alt="">
            </div>
            <div class="col" id="contactDivCol2">
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <input type="text" class="form-control" id="firstName" placeholder="First Name">
                        </div>
                        <div class="form-group col-md-6">
                            <input type="text" class="form-control" id="lastName" placeholder="Last Name">
                        </div>
                    </div>
                    <br>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <input type="text" class="form-control" id="company" placeholder="Company">
                        </div>
                    </div>
                    <br>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <input type="email" class="form-control" id="inputEmail" placeholder="Email">
                        </div>
                        <div class="form-group col-md-6">
                            <input type="number" class="form-control" id="inputPhone" placeholder="Phone Number">
                        </div>
                    </div>
                    <br>
                    <div class="form-row" id="messageboxDiv">
                        <div class="form-group col-md-12">
                            <label for="messagebox">Message</label>
                            <textarea name="messagebox" class="form-control" id="messagebox" cols="30" rows="6"
                                placeholder="Type text here"></textarea>
                        </div>
                    </div>
                    <div id="contactSubmitButtonDiv">
                        <button type="submit" class="btn btn-primary" id="submitButton">submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- end contact form divider -->

